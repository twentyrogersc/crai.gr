{
  "name": "crai.gr",
  "version": "1.0.0",
  "description": "crai.gr",
  "repository": "twentyrogersc/crai.gr",

  "scripts": {
    "build": "next build",
    "dev": "npm run build && next",
    "heroku-postbuild": "heroku-nextjs-build",
    "precommit": "lint-staged",
    "start": "next start -p $PORT"
  },

  "dependencies": {
    "@mars/heroku-nextjs-build": "^2.0.0",
    "babel-plugin-styled-components": "^1.2.0",
    "next": "^2.1.0",
    "react": "^15.5.3",
    "react-dom": "^15.5.3",
    "styled-components": "^2.1.2"
  },
  "devDependencies": {
    "husky": "^0.13.3",
    "lint-staged": "^3.4.0",
    "prettier": "^0.22.0"
  },

  "lint-staged": {
    "*.js": [
      "prettier --print-width=100 --single-quote --write",
      "git add"
    ]
  },

  "engines": {
    "node": "6.9.x"
  },
  "cacheDirectories": [
    "nextjs/node_modules"
  ]
}
