
html
body
h1
h2
h3
p
ul
li
blockquote
  margin: 0
  padding: 0


body
  box-sizing: border-box
  font: 400 10px/1em 'Helvetica Neue', helvetica, sans-serif
  margin: 0 auto
  width: 100%

p
  margin-bottom: 1em

a
  color: blue
  text-decoration: none

  &:hover
    text-decoration: underline


#portfolio
  font-size: 42px
  padding: 40px

  @media (max-width: 800px)
    font-size: 32px

  @media (max-width: 500px)
    padding: 24px
    font-size: 24px

  @media (max-width: 400px)
    font-size: 18px

  h1
    font-size: 1em

    span
      font-weight: normal

  h1
  a
    position: relative
    z-index: 2

  ul
    list-style-type: none
    margin: 2em 0

  li
    margin-bottom: 0.75em

  .image
    border: 1px blue solid
    left: 50%
    position: fixed
    top: 50%
    transform: translate(-50%, -50%)
    -webkit-transform: translate(-50%, -50%)
    z-index: 0

    @media (max-width: 800px)
      display: none

    img
      display: block
      opacity: 0

    &.is-active
      border-width: 2px
      z-index: 1

      img
        opacity: 1


#cv
  font-size: 14px
  line-height: 20px
  min-width: 280px
  max-width: 700px
  padding: 40px 20px

  h1
    margin-bottom: .25em

  h2
    color: #999
    margin: 2em 0 .5em

    + h3
      margin-top: 0

  h3
    margin-top: 2em

  h3 + p
    margin-bottom: .5em

  ul
    margin: 0

  li
    margin-left: 20px

  blockquote
    font-size: .8em
    font-weight: bold
